{
  "manifest_version": 2,
  "name": "budget manager",
  "version": "1.0",
  "description": "This extension tracks your overall spending",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "index.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Ctrl+Shift+F"
      },
      "description": "Opens"
    }
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": ["storage", "notifications", "contextMenus"]
}
